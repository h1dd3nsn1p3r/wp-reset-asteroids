{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["element-plus/global"]
	},
	"include": [
		"app/src/**/*.ts",
		"app/src/**/*.d.ts",
		"app/src/**/*.tsx",
		"app/src/**/*.vue",
		"app/src/stores/products.js"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
